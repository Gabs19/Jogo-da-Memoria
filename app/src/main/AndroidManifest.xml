<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.god.jogodamemoria">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fundomenu"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fundomenu"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GameScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Sobre" android:screenOrientation="landscape"/>
        <activity android:name=".Game" android:screenOrientation="landscape"></activity>
    </application>

</manifest>